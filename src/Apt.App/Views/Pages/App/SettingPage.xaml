<Page
    x:Class="Apt.App.Views.Pages.App.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Apt.App.Views.Pages.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:su="clr-namespace:Apt.Core.Utility;assembly=Apt.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingPage"
    d:DataContext="{d:DesignInstance local:SettingPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="640"
    d:DesignWidth="960"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="True"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,24">
        <ui:TextBlock
            Margin="0,0,0,8"
            FontTypography="BodyStrong"
            Text="{Binding [SettingPageOptions], Source={x:Static su:Language.Instance}}" />
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Color24}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        FontTypography="Body"
                        Text="{Binding [SettingPageTheme], Source={x:Static su:Language.Instance}}" />
                </Grid>
            </ui:CardControl.Header>
            <ComboBox
                MinWidth="200"
                DisplayMemberPath="Text"
                ItemsSource="{Binding ViewModel.ThemeSource}"
                SelectedItem="{Binding ViewModel.ThemeItem}" />
        </ui:CardControl>
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon AppsList24}">
            <ui:CardControl.Header>
                <ui:TextBlock FontTypography="Body" Text="{Binding [SettingPageMode], Source={x:Static su:Language.Instance}}" />
            </ui:CardControl.Header>
            <ComboBox
                MinWidth="200"
                DisplayMemberPath="Text"
                ItemsSource="{Binding ViewModel.ModeSource}"
                SelectedItem="{Binding ViewModel.ModeItem}" />
        </ui:CardControl>
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon LocalLanguage24}">
            <ui:CardControl.Header>
                <ui:TextBlock FontTypography="Body" Text="{Binding [SettingPageLanguage], Source={x:Static su:Language.Instance}}" />
            </ui:CardControl.Header>
            <ComboBox
                MinWidth="200"
                DisplayMemberPath="Text"
                ItemsSource="{Binding ViewModel.LanguageSource}"
                SelectedItem="{Binding ViewModel.LanguageItem}" />
        </ui:CardControl>
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Chat24}">
            <ui:CardControl.Header>
                <Grid>
                    <ui:TextBlock FontTypography="Body" Text="{Binding [SettingPageGenPhiConfig], Source={x:Static su:Language.Instance}}" />
                </Grid>
            </ui:CardControl.Header>
            <Button
                MinWidth="200"
                Command="{Binding ViewModel.SetGenPhiConfigCommand}"
                Content="{Binding [SettingPageGenPhiConfigSetting], Source={x:Static su:Language.Instance}}" />
        </ui:CardControl>
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Chat24}">
            <ui:CardControl.Header>
                <Grid>
                    <ui:TextBlock FontTypography="Body" Text="{Binding [SettingPageGenDeepSeekConfig], Source={x:Static su:Language.Instance}}" />
                </Grid>
            </ui:CardControl.Header>
            <Button
                MinWidth="200"
                Command="{Binding ViewModel.SetGenDeepSeekConfigCommand}"
                Content="{Binding [SettingPageGenDeepSeekConfigSetting], Source={x:Static su:Language.Instance}}" />
        </ui:CardControl>
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Emoji24}">
            <ui:CardControl.Header>
                <Grid>
                    <ui:TextBlock FontTypography="Body" Text="{Binding [SettingPageLicense], Source={x:Static su:Language.Instance}}" />
                </Grid>
            </ui:CardControl.Header>
            <Grid MinWidth="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding ViewModel.SetLicenseInfoCommand}"
                    Content="{Binding [SettingPageLicenseInfo], Source={x:Static su:Language.Instance}}" />
                <Button
                    Grid.Column="1"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding ViewModel.SetLicenseOrderCommand}"
                    Content="{Binding [SettingPageLicenseOrder], Source={x:Static su:Language.Instance}}" />
            </Grid>
        </ui:CardControl>
        <ui:TextBlock
            Margin="0,8,0,8"
            FontTypography="BodyStrong"
            Text="{Binding [SettingPageAbout], Source={x:Static su:Language.Instance}}" />
        <ui:CardExpander
            ContentPadding="0"
            Icon="{ui:ImageIcon '/Apt.App;component/Assets/App.ico',
                                Width=48,
                                Height=48}"
            IsExpanded="True">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="20"
                        FontTypography="Body"
                        Text="{Binding [ApplicationTitle], Source={x:Static su:Language.Instance}}" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        FontSize="12"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Text="{Binding [ApplicationDescription], Source={x:Static su:Language.Instance}}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Text="{Binding [ApplicationTitle], Source={x:Static su:Language.Instance}, Converter={StaticResource VersionConverter}}" />
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0"
                    NavigateUri="mailto:Rnchg@Hotmail.com">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Email: Rnchg@Hotmail.com" />
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0"
                    NavigateUri="https://github.com/rnchg/apt">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Github: github.com/rnchg/Apt" />
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0"
                    NavigateUri="https://gitee.com/rnchg/apt">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Gitee: gitee.com/rnchg/apt" />
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0"
                    NavigateUri="https://www.youtube.com/channel/UCHKH3bLpd8giPyr6x5sKGfw">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Youtube: Light Cloud Wind" />
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0"
                    NavigateUri="https://space.bilibili.com/478375442">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Bilibili: 风轻云也净" />
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0"
                    NavigateUri="#">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="QQ: 6085398" />
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
            </StackPanel>
        </ui:CardExpander>
    </StackPanel>
</Page>
