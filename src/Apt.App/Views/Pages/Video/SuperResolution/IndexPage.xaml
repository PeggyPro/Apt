<Page
    x:Class="Apt.App.Views.Pages.Video.SuperResolution.IndexPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fg="clr-namespace:Apt.Service.Controls.FileGrid;assembly=Apt.Service"
    xmlns:fm="clr-namespace:Apt.Service.Controls.FileMessage;assembly=Apt.Service"
    xmlns:fv="clr-namespace:Apt.Service.Controls.FileView;assembly=Apt.Service"
    xmlns:local="clr-namespace:Apt.App.Views.Pages.Video.SuperResolution"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Apt.App.ViewModels.Pages.Video.SuperResolution"
    xmlns:su="clr-namespace:Apt.Core.Utility;assembly=Apt.Core"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:IndexPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="640"
    d:DesignWidth="960"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="6"
                    VerticalAlignment="Center"
                    Content="{Binding [Video.SuperResolution.InputFolder], Source={x:Static su:Language.Instance}}" />
                <TextBox
                    Grid.Column="1"
                    Margin="6"
                    Text="{Binding ViewModel.Input}" />
                <ui:Button
                    Grid.Column="2"
                    Margin="6"
                    Appearance="Info"
                    Command="{Binding ViewModel.SetInputCommand}"
                    Content="{Binding [Video.SuperResolution.InputSelect], Source={x:Static su:Language.Instance}}" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="6"
                    VerticalAlignment="Center"
                    Content="{Binding [Video.SuperResolution.OutputFolder], Source={x:Static su:Language.Instance}}" />
                <TextBox
                    Grid.Column="1"
                    Margin="6"
                    Text="{Binding ViewModel.Output}" />
                <ui:Button
                    Grid.Column="2"
                    Margin="6"
                    Appearance="Info"
                    Command="{Binding ViewModel.SetOutputCommand}"
                    Content="{Binding [Video.SuperResolution.OutputSelect], Source={x:Static su:Language.Instance}}" />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="6"
                    VerticalAlignment="Center"
                    Content="{Binding [Video.SuperResolution.Provider], Source={x:Static su:Language.Instance}}" />
                <ComboBox
                    Grid.Column="1"
                    Margin="6"
                    DisplayMemberPath="Text"
                    ItemsSource="{Binding ViewModel.ProviderSource}"
                    SelectedItem="{Binding ViewModel.ProviderItem}" />
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="6"
                    VerticalAlignment="Center"
                    Content="{Binding [Video.SuperResolution.Mode], Source={x:Static su:Language.Instance}}" />
                <ComboBox
                    Grid.Column="1"
                    Margin="6"
                    DisplayMemberPath="Text"
                    ItemsSource="{Binding ViewModel.ModeSource}"
                    SelectedItem="{Binding ViewModel.ModeItem}" />
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="6"
                    VerticalAlignment="Center"
                    Content="{Binding [Video.SuperResolution.Scale], Source={x:Static su:Language.Instance}}" />
                <ComboBox
                    Grid.Column="1"
                    Margin="6"
                    DisplayMemberPath="Text"
                    ItemsSource="{Binding ViewModel.ScaleSource}"
                    SelectedItem="{Binding ViewModel.ScaleItem}" />
            </Grid>
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="6"
                    VerticalAlignment="Center"
                    Content="{Binding [Video.SuperResolution.Progress], Source={x:Static su:Language.Instance}}" />
                <Grid Grid.Column="1" Margin="6">
                    <ProgressBar Maximum="{Binding ViewModel.ProgressBarMaximum}" Value="{Binding ViewModel.ProgressBarValue}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding ViewModel.ProgressBarText}" />
                </Grid>
                <ui:Button
                    Grid.Column="2"
                    Margin="6"
                    Appearance="Info"
                    Command="{Binding ViewModel.SetStartCommand}"
                    Content="{Binding [Video.SuperResolution.Start], Source={x:Static su:Language.Instance}}"
                    IsEnabled="{Binding ViewModel.StartEnabled}" />
                <ui:Button
                    Grid.Column="3"
                    Margin="6"
                    Appearance="Danger"
                    Command="{Binding ViewModel.SetStopCommand}"
                    Content="{Binding [Video.SuperResolution.Stop], Source={x:Static su:Language.Instance}}"
                    IsEnabled="{Binding ViewModel.StopEnabled}" />
                <ui:Button
                    Grid.Column="4"
                    Margin="6"
                    Appearance="Success"
                    Command="{Binding ViewModel.SetOpenCommand}"
                    Content="{Binding [Video.SuperResolution.Open], Source={x:Static su:Language.Instance}}" />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <fg:Grid
                x:Name="FileGrid"
                Grid.Column="0"
                SwitchItem="{Binding ViewModel.FileGridSwitchItem}"
                TableItem="{Binding ViewModel.FileGridTableItem}"
                TableList="{Binding ViewModel.FileGridTableList}" />
            <fv:View
                x:Name="FileView"
                Grid.Column="1"
                VideoItem="{Binding ViewModel.FileViewItem}"
                VideoVisibility="Visible" />
            <fm:View
                x:Name="FileMessage"
                Grid.Column="2"
                MessageItem="{Binding ViewModel.MessageItem}" />
        </Grid>
    </Grid>
</Page>